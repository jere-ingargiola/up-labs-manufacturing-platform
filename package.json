{
  "name": "up-labs-manufacturing-platform",
  "version": "1.0.0",
  "description": "UP Labs Manufacturing Intelligence Platform - IoT sensor monitoring and predictive maintenance",
  "private": true,
  "workspaces": [
    "lambdas/*",
    "infra"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:lambdas": "npm run build --workspaces --if-present lambdas/*",
    "build:infra": "npm run build -w infra",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "deploy:infra": "npm run deploy -w infra",
    "deploy:lambdas": "npm run deploy --workspaces lambdas/*",
    "synth": "npm run synth -w infra",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "aws-sdk": "^2.1692.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jere-ingargiola/up-labs-manufacturing-platform.git"
  },
  "keywords": [
    "manufacturing",
    "iot",
    "aws",
    "typescript",
    "serverless",
    "timescaledb",
    "kafka",
    "anomaly-detection"
  ],
  "author": "UP Labs",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
